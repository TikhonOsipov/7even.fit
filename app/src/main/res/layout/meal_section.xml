<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <import type="android.view.View" />
    </data>
    <LinearLayout
        android:background="@color/sectionBackground"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="36dp">

            <TextView
                android:text="07:00"
                android:id="@+id/textMealTime"
                android:textColor="#ffffff"
                android:layout_centerVertical="true"
                android:textSize="12sp"
                android:layout_marginStart="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                tools:text="First meal"
                android:id="@+id/textMealOrder"
                android:textColor="#ffffff"
                android:layout_centerVertical="true"
                android:textSize="12sp"
                android:layout_marginStart="8dp"
                android:layout_toEndOf="@+id/textMealTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="24dp">

            <TextView
                android:text="gm"
                android:id="@+id/weight"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:layout_width="@dimen/grey_field_width"
                android:textSize="@dimen/section_meal_name_text_size"
                android:textColor="@color/white"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:layout_height="wrap_content" />

            <TextView
                android:text="notes"
                android:id="@+id/mealNameTitle"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:textSize="@dimen/section_meal_name_text_size"
                android:textColor="@color/white"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:layout_toEndOf="@+id/weight"
                android:layout_toStartOf="@id/nutritionFactsLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:id="@+id/nutritionFactsLayout"
                android:orientation="horizontal"
                android:layout_alignParentEnd="true"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
                <TextView
                    android:text="pr."
                    android:id="@+id/proteins"
                    android:layout_gravity="center_vertical"
                    android:gravity="center"
                    android:layout_width="@dimen/grey_field_width"
                    android:textSize="@dimen/section_meal_name_text_size"
                    android:textColor="@color/white"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"
                    android:layout_height="wrap_content" />
                <TextView
                    android:text="fat"
                    android:id="@+id/fat"
                    android:layout_gravity="center_vertical"
                    android:gravity="center"
                    android:layout_width="@dimen/grey_field_width"
                    android:textSize="@dimen/section_meal_name_text_size"
                    android:textColor="@color/white"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"
                    android:layout_height="wrap_content" />
                <TextView
                    android:text="carbs"
                    android:id="@+id/carbs"
                    android:layout_gravity="center_vertical"
                    android:gravity="center"
                    android:layout_width="@dimen/grey_field_width"
                    android:textSize="@dimen/section_meal_name_text_size"
                    android:textColor="@color/white"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"
                    android:layout_height="wrap_content" />
                <TextView
                    android:text="kcal"
                    android:id="@+id/calories"
                    android:layout_gravity="center_vertical"
                    android:gravity="center"
                    android:layout_width="@dimen/grey_field_width"
                    android:textSize="@dimen/section_meal_name_text_size"
                    android:textColor="@color/white"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</layout>